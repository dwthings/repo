<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>20</left>
		<top>260</top>
	</coordinates>
	<include>DialogOpenCloseAnimation</include>
	<controls>
		<control type="group">
			<animation effect="slide" end="220,0" time="0" condition="String.IsEqual(Skin.String(MainMenu.Layout),vertical)">Conditional</animation>
			<control type="image">
				<top>45</top>
<!-- 				<left>5</left> -->
				<width>1128</width>
				<height>505</height>
				<texture border="40">keyboard_back.png</texture>
				<visible>[String.IsEmpty(Skin.String(dialogpopup))]</visible>
				<visible>!Skin.HasSetting(Disable.Dialog.Popup)</visible>
			</control>
			<control type="image">
				<top>45</top>
<!-- 				<left>5</left> -->
				<width>1128</width>
				<height>505</height>
				<texture colordiffuse="$VAR[DialogBoxColor]" fallback="keyboard_back.png" border="40">$INFO[Skin.String(dialogpopup)]</texture>
				<visible>!Skin.HasSetting(Disable.Dialog.Popup)</visible>
			</control>
			<control type="image">
				<left>676</left>
				<top>86</top>
				<width>422</width>
				<height>422</height>
				<aspectratio>keep</aspectratio>
				<texture background="true">$INFO[Container(450).ListItem.Icon]</texture>
				<bordertexture border="5">dialogs/default/inner.png</bordertexture>
				<bordersize>1</bordersize>
			</control>
			<control type="label" id="1">
				<left>30</left>
				<top>47</top>
				<width>1068</width>
				<height>40</height>
				<font>font15_title</font>
				<label>$LOCALIZE[1036]</label>
				<align>center</align>
				<textcolor>$VAR[ThemeLabelColor]</textcolor>
			</control>
			<control type="image">
				<left>40</left>
				<top>86</top>
				<width>632</width>
				<height>424</height>
				<texture border="5">dialogs/default/inner.png</texture>
			</control>
			<control type="list" id="450">
				<left>40</left>
				<top>88</top>
				<width>630</width>
				<height>420</height>
				<onup>450</onup>
				<ondown>450</ondown>
				<onleft>60</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="60" width="641">
					<control type="label">
						<width>630</width>
						<height>60</height>
						<font>font14</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>$VAR[ThemeLabelColor]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>630</left>
						<width>630</width>
						<height>60</height>
						<font>font14</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>$VAR[ThemeLabelColor]</textcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60" width="641">
					<control type="image">
						<left>1</left>
						<width>630</width>
						<height>60</height>
						<texture border="5">listselect_fo.png</texture>
						<visible>[String.IsEmpty(Skin.String(highlightbar))]</visible>
						<visible>!Skin.HasSetting(Disable.Highlight.Bar)</visible>
						<visible>Control.HasFocus(450)</visible>
					</control>
					<control type="image">
						<left>1</left>
						<width>630</width>
						<height>60</height>
						<texture colordiffuse="$VAR[HighlightBarColor]" fallback="listselect_fo.png" border="5">$INFO[Skin.String(highlightbar)]</texture>
						<visible>!Skin.HasSetting(Disable.Highlight.Bar)</visible>
						<visible>Control.HasFocus(450)</visible>
					</control>
					<control type="label">
						<width>630</width>
						<height>60</height>
						<font>font14</font>
						<textcolor>$VAR[SelectedLabelColor]</textcolor>
						<textoffsetx>15</textoffsetx>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
					<control type="label">
						<left>630</left>
						<width>630</width>
						<height>60</height>
						<font>font14</font>
						<textcolor>$VAR[SelectedLabelColor]</textcolor>
						<textoffsetx>15</textoffsetx>						
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>672</left>
				<top>88</top>
				<height>400</height>
				<width>14</width>
				<onleft>450</onleft>
				<onright>450</onright>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground />
				<texturesliderbar colordiffuse="$VAR[ThemeLabelColor]" border="4">scrollbar/texturesliderbar3.png</texturesliderbar>
				<texturesliderbarfocus colordiffuse="$VAR[SelectedLabelColor]" border="4">scrollbar/texturesliderbar3.png</texturesliderbarfocus>
			</control>
		</control>
	</controls>
</window>